{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "app",
    "lib",
    "types",
    "**/*.ts",
    "**/*.tsx",
    "nativewind.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
